algoritmo "alistamento"

var
  idade:inteiro

inicio
  escreva("Qual é a idade so soldado?")
  leia(ideia)
  
  escreval()
  
  se idade > 18 entao
    escreva("Já se passaram ", (idade - 18), " anos desde seu alistamento")
  senao
    escreva("Ainda falta ", ((idade - 18) * -1), " anos para seu alistamento")
  fimse

fimalgoritmo
