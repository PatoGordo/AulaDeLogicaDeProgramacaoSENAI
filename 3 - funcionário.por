algoritmo "funcionario"

var
 nome:caractere
 salario:real
 mes:caractere
  
inicio
  escreva("Nome do funcionário: ")
  leia(nome)
  
  escreval()
  
  escreva("Salário: ")
  leia(salario)
  
  escreva("Mês do pagamento: ")
  leia(mes)
  
  escreval()
  
  escreva("O funcionário ", nome, " tem um salário de R$", salário, " em ", mes)
  
fimalgoritmo
